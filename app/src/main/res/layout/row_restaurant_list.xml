<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/txt_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/rl_featuredimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/txt_restaurant_name">
        <ImageView
            android:id="@+id/iv_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"/>
        <FrameLayout
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/txt_aggregaterating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:textColor="@android:color/black"/>
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_featuredimage"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/txt_cuisines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_featuredimage"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@+id/txt_rating"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_cuisines"
        android:textSize="10sp"
android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray"

        android:layout_alignLeft="@+id/txt_cuisines"/>

</RelativeLayout>

